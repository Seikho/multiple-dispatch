{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationDir": "./types",
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "types"
    ]
}